<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_l10n_mx_edi_retailer_move_form_inherit" model="ir.ui.view">
        <field name="name">l10n_mx_edi.retailer.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <!-- Put a button on the invoice to open the wizard to set complement fields-->
            <xpath expr="//field[@name='state']" position="before">
                <button
                    name="l10n_mx_edi_retailer.action_set_default_values_wizard_retailer"
                    type="action"
                    string="Complement Retailer"
                    attrs="{'invisible': [('move_type', 'not in', ['out_invoice', 'out_refund'])]}"
                    context="{'invoice_id': id}"
                />
            </xpath>
        </field>
    </record>

</odoo>
