<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_delivery" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.l10n.mx.edi.sale.coupon.unfuck</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="l10n_mx_edi.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr=".//div[@id='l10n_mx_edi_settings']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" title="Sale Coupon.">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Avoid Delivery Discount</span>
                        <div class="text-muted">
                            When this option is enable the discount from Coupon and
                            Promotion Program will not apply for delivery products.
                        </div>
                        <div class="row mt16">
                            <field name="l10n_mx_edi_not_delivery_discount"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
